<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    tools:context=".Result">

    <include layout="@layout/global_background"></include>

    <include
        layout="@layout/app_bar"
        android:id="@+id/topBar"></include>

    <Button
        android:id="@+id/btnReviewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:textColor="#fff"
        android:background="#40000000"
        android:textSize="18sp"
        android:text="Review your test"/>

    <LinearLayout
        android:layout_below="@id/topBar"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txtResultNumber"
            android:text="Test Result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="22sp" />


        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/imgResult"
            android:contentDescription="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_alt"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/txtResult"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="36dp" />


    </LinearLayout>


</RelativeLayout>
