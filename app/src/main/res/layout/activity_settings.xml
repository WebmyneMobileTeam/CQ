<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.computerquiz.ui.SettingsActivity">
    <include layout="@layout/global_background"></include>

    <include
        android:id="@+id/topBar"
        layout="@layout/app_bar"/>

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_below="@id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView

            android:padding="16dp"
            android:id="@+id/card_view_backgroundColor"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">

            <TextView
                android:layout_margin="8dp"
                android:textColor="#000"
                android:textSize="18sp"
                android:text="Background Color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"/>

            <ImageView
                android:layout_margin="8dp"
                android:background="#a00"
                android:layout_gravity="right|center_vertical"
                android:id="@+id/selectedColorView"
                android:layout_width="32dp"
                android:layout_height="32dp"></ImageView>




        </android.support.v7.widget.CardView>



    </LinearLayout>



</RelativeLayout>
